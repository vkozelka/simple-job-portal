{% extends "layout.twig" %}

{% block main %}
    <h2>{{ cmsTranslate("admin.news.title") }}</h2>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>{{ cmsTranslate("admin.news.title") }}</th>
            <th class="text-center">{{ cmsTranslate("admin.news.created_at") }}</th>
            <th class="text-center">{{ cmsTranslate("admin.news.updated_at") }}</th>
            <th class="text-right"><a class="btn btn-sm btn-success" href="{{ cmsUrl("admin",{"module":"news","controller":"index","action":"new"}) }}"><span class="fa fa-plus"></span> Přidat</a></th>
        </tr>
        </thead>
        <tbody>
        {% if news | length > 0 %}
            {% for n in news %}
            <tr>
                <td class="text-left">{{ n.title }}</td>
                <td class="text-center">{{ n.created_at }}</td>
                <td class="text-center">{{ n.updated_at }}</td>
                <td class="text-right">
                    <a class="btn btn-sm btn-info" href="{{ cmsUrl("admin",{"module":"news","controller":"index","action":"edit","params":n.id}) }}"><span class="fa fa-pencil"></span></a>
                    <a class="btn btn-sm btn-danger" href="{{ cmsUrl("admin",{"module":"news","controller":"index","action":"delete","params":n.id}) }}"><span class="fa fa-trash"></span></a>
                </td>
            </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="4" class="text-center">Není zde žádná novinka</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
{% endblock %}